@model IEnumerable<BrokerTicketingExample.Models.GetEvents_Result>

@{
    ViewBag.Title = "Index";
}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Date
        </th>
        <th>
            Capacity
        </th>
        <th>
            Remaining
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalTicketCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remaining)
        </td>
        <td>
            @Html.ActionLink("Create Booking", "Booking", new { id=item.Id })
        </td>
    </tr>
}

</table>
